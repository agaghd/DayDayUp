<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <ImageView
        android:id="@+id/bg_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        android:alpha="0.3"
        tools:src="@drawable/alice"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/score_tv"
        android:layout_width="0dp"
        android:gravity="center_vertical|end"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_height="64dp"
        android:background="#AA000000"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        tools:text="今日成绩：65"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/title_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintLeft_toLeftOf="@id/score_tv"
        app:layout_constraintTop_toTopOf="@id/score_tv"
        app:layout_constraintBottom_toBottomOf="@id/score_tv"
        tools:ignore="ContentDescription"
        tools:src="@drawable/icon_code"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/task_rv"
        android:layout_width="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/score_tv"
        tools:listitem="@layout/item_task"
        tools:itemCount="5">

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>