<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/item_bg"
    android:layout_width="match_parent"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_height="64dp">

    <ImageView
        android:id="@+id/icon_iv"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/icon_dumbbell"
        android:padding="1dp"
        android:background="@drawable/icon_bg"
        android:layout_width="48dp"
        android:layout_height="48dp"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/icon_iv"
        app:layout_constraintLeft_toRightOf="@id/icon_iv"
        tools:text="健身"/>

    <TextView
        android:id="@+id/discription_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/icon_iv"
        app:layout_constraintLeft_toRightOf="@id/icon_iv"
        tools:text="お願いします "/>

    <Button
        android:id="@+id/complete_btn"
        android:layout_width="88dp"
        android:layout_height="44dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="12dp"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:text="完成"
        android:background="@drawable/btn_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/point_tv"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/complete_btn"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        tools:text="+ 10"/>

</android.support.constraint.ConstraintLayout>